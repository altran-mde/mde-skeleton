<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.text"
            file-extensions="statemachinelsp"
            id="org.eclipse.xtext.example.fowlerdsl.Statemachine.contenttype.lsp"
            name="Statemachine File (LSP)"
            priority="normal">
      </content-type>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editorContentTypeBinding
            contentTypeId="org.eclipse.xtext.example.fowlerdsl.Statemachine.contenttype.lsp"
            editorId="org.eclipse.ui.genericeditor.GenericEditor">
      </editorContentTypeBinding>
   </extension>
   <extension
         point="org.eclipse.tm4e.registry.grammars">
      <grammar
            path="language/grammars/statemachine.tmLanguage.json"
            scopeName="text.statemachine">
      </grammar>
      <scopeNameContentTypeBinding
            contentTypeId="org.eclipse.xtext.example.fowlerdsl.Statemachine.contenttype.lsp"
            scopeName="text.statemachine">
      </scopeNameContentTypeBinding>
   </extension>
   <extension
         point="org.eclipse.tm4e.languageconfiguration.languageConfigurations">
      <languageConfiguration
            contentTypeId="org.eclipse.xtext.example.fowlerdsl.Statemachine.contenttype.lsp"
            path="language/configurations/statemachine.language-configuration.json">
      </languageConfiguration>
   </extension>
   <extension
         point="org.eclipse.lsp4e.languageServer">
      <server
            class="org.eclipse.xtext.example.fowlerdsl.lsp.editor.StatemachineLanguageServer"
            id="org.eclipse.xtext.example.fowlerdsl.lsp4e.server"
            label="Statemachine LSP Server"
            singleton="true">
      </server>
      <contentTypeMapping
            contentType="org.eclipse.xtext.example.fowlerdsl.Statemachine.contenttype.lsp"
            id="org.eclipse.xtext.example.fowlerdsl.lsp4e.server">
      </contentTypeMapping>
   </extension>
   <extension
         point="org.eclipse.tm4e.ui.snippets">
      <snippet
            name="Statemachine Example"
            path="language/snippets/MrsGrantsSecretCompartments.statemachinelsp"
            scopeName="text.statemachine">
      </snippet>
   </extension>

</plugin>
