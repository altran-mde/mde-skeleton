<!-- This file is also used in the developer guide -->
<!-- Do not remove the tag::, end:: and [0..9] comments as they are required by asciidoc -->
<settings xmlns="http://maven.apache.org/SETTINGS/1.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.1.0
                      http://maven.apache.org/xsd/settings-1.1.0.xsd">
  <!-- tag::doc-mirrors[] -->
  <mirrors>
    <!-- Maven mirrors -->
    <mirror>
      <id>mde-assets-maven-central</id>
      <name>ACIDSpace Maven Central</name>
      <url>https://nexus.acidspace.nl/repository/mde-assets/</url>
      <mirrorOf>central</mirrorOf> <!--1-->
    </mirror>

    <!-- P2 target platform mirrors -->
    <mirror>
      <url>https://nexus.acidspace.nl/repository/eclipse.org-releases-2020-06-202006171000</url>
      <mirrorOf>https://download.eclipse.org/releases/2020-06/202006171000</mirrorOf> <!--2-->
      <mirrorOfLayouts>p2</mirrorOfLayouts>
      <layout>p2</layout>
    </mirror>
    <!-- end::doc-mirrors[] -->
    <mirror>
      <url>https://nexus.acidspace.nl/repository/itemis.com-releases-2.1.1</url>
      <mirrorOf>http://download.itemis.com/updates/releases/2.1.1</mirrorOf>
      <mirrorOfLayouts>p2</mirrorOfLayouts>
      <layout>p2</layout>
    </mirror>
    <mirror>
      <url>https://nexus.acidspace.nl/repository/eclipse.org-org.eclipse.e4.tools-latest</url>
      <mirrorOf>https://download.eclipse.org/e4/snapshots/org.eclipse.e4.tools/latest</mirrorOf>
      <mirrorOfLayouts>p2</mirrorOfLayouts>
      <layout>p2</layout>
    </mirror>
    <mirror>
      <url>https://nexus.acidspace.nl/repository/yakindu.com-statecharts-releases-3.5.13/</url>
      <mirrorOf>https://updates.yakindu.org/statecharts/releases/3.5.13</mirrorOf>
      <mirrorOfLayouts>p2</mirrorOfLayouts>
      <layout>p2</layout>
    </mirror>
  <!-- tag::doc-mirrors[] -->
  </mirrors>

  <servers>
  <!-- end::doc-mirrors[] -->
    <!-- Deployment credentials -->
    <server>
      <id>acidspace-repository-manager</id>
      <configuration>
        <timeout>10000</timeout>
      </configuration>
      <username>${env.TECHNICAL_USER}</username>
      <password>${env.TECHNICAL_PASSWORD}</password>
    </server>

    <!-- tag::doc-mirrors[] -->
    <!-- Maven mirrors -->
    <server>
      <id>mde-assets-maven-central</id>  <!--3-->
      <configuration>
        <timeout>10000</timeout>
      </configuration>
      <username>${env.TECHNICAL_USER}</username>  <!--4-->
      <password>${env.TECHNICAL_PASSWORD}</password>
    </server>

    <!-- ACIDSpace servers in target platform -->
    <!-- end::doc-mirrors[] -->
    <server>
      <id>espilce-periksa-p2</id>
      <configuration>
        <timeout>10000</timeout>
      </configuration>
      <username>${env.TECHNICAL_USER}</username>
      <password>${env.TECHNICAL_PASSWORD}</password>
    </server>

    <server>
      <id>espilce-polvi-p2</id>
      <configuration>
        <timeout>10000</timeout>
      </configuration>
      <username>${env.TECHNICAL_USER}</username>
      <password>${env.TECHNICAL_PASSWORD}</password>
    </server>

    <server>
      <id>xtext-sirius-integration-p2</id>
      <configuration>
        <timeout>10000</timeout>
      </configuration>
      <username>${env.TECHNICAL_USER}</username>
      <password>${env.TECHNICAL_PASSWORD}</password>
    </server>

    <server>
      <id>ecoredoc-p2</id>
      <configuration>
        <timeout>10000</timeout>
      </configuration>
      <username>${env.TECHNICAL_USER}</username>
      <password>${env.TECHNICAL_PASSWORD}</password>
    </server>

    <!-- tag::doc-mirrors[] -->
    <server>
      <id>espilce-commons-p2</id> <!--5-->
      <configuration>
        <timeout>10000</timeout>
      </configuration>
      <username>${env.TECHNICAL_USER}</username>
      <password>${env.TECHNICAL_PASSWORD}</password>
    </server>
  </servers>
  <!-- end::doc-mirrors[] -->

  <profiles>
    <profile>
      <id>mde-assets-maven-central-snapshots</id>
      <properties>
        <tycho.disableP2Mirrors>true</tycho.disableP2Mirrors>
        <tycho.localArtifacts>ignore</tycho.localArtifacts>
      </properties>
      <repositories>
        <repository>
          <id>mde-assets-maven-central</id>
          <url>https://nexus.acidspace.nl/repository/mde-assets/</url>
        </repository>
      </repositories>
      <pluginRepositories>
        <pluginRepository>
          <id>mde-assets-maven-central</id>
          <url>https://nexus.acidspace.nl/repository/mde-assets/</url>
        </pluginRepository>
      </pluginRepositories>
    </profile>
  </profiles>

  <activeProfiles>
    <activeProfile>mde-assets-maven-central-snapshots</activeProfile>
    <!-- Apply the Altran theme on generated documentation -->
    <activeProfile>asciidoc-altran-theme</activeProfile>
  </activeProfiles>
</settings>