<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.altran.acidcli.mde</groupId>
  <artifactId>com.altran.acidcli.mde.release</artifactId>
  <name>ACIDCLI - Release MDE Repository</name>
  <version>1.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>

  <properties>
    <tycho.version>1.7.0</tycho.version>

    <!-- This property will be overwritten by the merge-p2-repository profile if active -->
    <acidcli.p2.deployDir>${acidcli.repository.localDir}/repository</acidcli.p2.deployDir>
  </properties>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-install-plugin</artifactId>
          <version>2.5.2</version>
          <configuration>
            <!-- We do not want to install this pom into the local repository -->
            <skip>true</skip>
          </configuration>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-deploy-plugin</artifactId>
          <version>2.8.2</version>
          <configuration>
            <!-- We do not want to deploy this pom to the remote repository -->
            <skip>true</skip>
          </configuration>
        </plugin>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>wagon-maven-plugin</artifactId>
          <version>2.0.0</version>
        </plugin>
        <plugin>
          <groupId>org.eclipse.tycho</groupId>
          <artifactId>tycho-maven-plugin</artifactId>
          <version>${tycho.version}</version>
          <extensions>true</extensions>
        </plugin>
        <plugin>
          <groupId>org.eclipse.tycho.extras</groupId>
          <artifactId>tycho-source-feature-plugin</artifactId>
          <version>${tycho.version}</version>
        </plugin>
      </plugins>
    </pluginManagement>

    <plugins>
      <plugin>
        <!-- This plugin is only used for debugging purposes and may be removed from the official acidcli release -->
        <groupId>com.soebes.maven.plugins</groupId>
        <artifactId>echo-maven-plugin</artifactId>
        <version>0.4.0</version>
        <executions>
          <execution>
            <id>echo-maven-properties</id>
            <phase>validate</phase>
            <goals>
              <goal>echo</goal>
            </goals>
            <configuration>
              <logLevel>DEBUG</logLevel>
              <echos>
                <echo>Local repository directory: ${acidcli.repository.localDir}</echo>
                <echo>Remote repository URI: ${acidcli.repository.remoteUri}</echo>
              </echos>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>wagon-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>release-p2-repository</id>
            <phase>deploy</phase>
            <goals>
              <goal>upload</goal>
            </goals>
            <configuration>
              <serverId>acidspace-repository-manager</serverId>
              <url>${acidcli.repository.remoteUri}/repository</url>
              <fromDir>${acidcli.p2.deployDir}</fromDir>
              <includes>**/*</includes>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <!-- Merges the built P2 repository at acidcli.repository.localDir --> 
      <!-- into the downloaded P2 repository at acidcli.p2.mergeDir and -->
      <!-- set acidcli.p2.mergeDir as the directory to be uploaded to Nexus -->
      <id>merge-p2-repository</id>
      <activation>
        <property>
          <name>acidcli.p2.mergeDir</name>
        </property>
        <file>
          <exists>${acidcli.p2.mergeDir}</exists>
        </file>
      </activation>
      <properties>
        <acidcli.p2.deployDir>${acidcli.p2.mergeDir}</acidcli.p2.deployDir>
      </properties>
      <build>
        <plugins>
          <plugin>
            <groupId>org.eclipse.tycho.extras</groupId>
            <artifactId>tycho-p2-extras-plugin</artifactId>
            <executions>
              <execution>
                <id>merge-p2-repository</id>
                <phase>process-resources</phase>
                <goals>
                  <goal>mirror</goal>
                </goals>
                <configuration>
                  <source>
                    <repository>
                      <id>acidspace-repository-manager</id>
                      <url>${acidcli.repository.localUri}/repository</url>
                      <layout>p2</layout>
                    </repository>
                  </source>
                  <destination>${acidcli.p2.mergeDir}</destination>
                  <followStrictOnly>true</followStrictOnly>
                  <append>true</append>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

    <profile>
      <!-- If Eclipse RCPs (products) are found, also upload them to Nexus -->
      <id>release-products</id>
      <activation>
        <file>
          <exists>${acidcli.repository.localDir}/products</exists>
        </file>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>wagon-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>release-products</id>
                <phase>deploy</phase>
                <goals>
                  <goal>upload</goal>
                </goals>
                <configuration>
                  <serverId>acidspace-repository-manager</serverId>
                  <url>${acidcli.repository.remoteUri}/products</url>
                  <fromDir>${acidcli.repository.localDir}/products</fromDir>
                  <includes>*.*</includes>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>