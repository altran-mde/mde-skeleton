<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <artifactId>com.altran.acidcli.mde.release</artifactId>
  <name>ACIDCLI - Release MDE Repository</name>
  <packaging>pom</packaging>

  <parent>
    <groupId>com.altran.ec.mde.skeleton</groupId>
    <artifactId>com.altran.ec.mde.skeleton.parent</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <relativePath>../releng/com.altran.ec.mde.skeleton.parent</relativePath>
  </parent>

  <properties>
    <acidcli.p2.deployDir>${acidcli.repository.localDir}/repository</acidcli.p2.deployDir>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>com.soebes.maven.plugins</groupId>
        <artifactId>echo-maven-plugin</artifactId>
        <version>0.4.0</version>
        <executions>
          <execution>
            <id>echo-maven-properties</id>
            <phase>validate</phase>
            <goals>
              <goal>echo</goal>
            </goals>
            <configuration>
              <echos>
                <echo>Local repository directory: ${acidcli.repository.localDir}</echo>
                <echo>Remote repository URI: ${acidcli.repository.remoteUri}</echo>
              </echos>
            </configuration>
          </execution>
        </executions>
      </plugin>
      
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>wagon-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>release-p2-repository</id>
            <phase>deploy</phase>
            <goals>
              <goal>upload</goal>
            </goals>
            <configuration>
              <serverId>acidspace-repository-manager</serverId>
              <url>${acidcli.repository.remoteUri}/repository</url>
              <fromDir>${acidcli.p2.deployDir}</fromDir>
              <includes>**/*</includes>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>merge-p2-repository</id>
      <activation>
        <file>
          <exists>${acidcli.p2.mergeDir}</exists>
        </file>
      </activation>
      <properties>
        <acidcli.p2.deployDir>${acidcli.p2.mergeDir}</acidcli.p2.deployDir>
      </properties>
      <build>
        <plugins>
          <plugin>
            <groupId>org.eclipse.tycho.extras</groupId>
            <artifactId>tycho-p2-extras-plugin</artifactId>
            <executions>
              <execution>
                <id>merge-p2-repository</id>
                <phase>process-resources</phase>
                <goals>
                  <goal>mirror</goal>
                </goals>
                <configuration>
                  <source>
                    <repository>
                      <id>acidspace-repository-manager</id>
                      <url>${acidcli.repository.localUri}/repository</url>
                      <layout>p2</layout>
                    </repository>
                  </source>
                  <destination>${acidcli.p2.mergeDir}</destination>
                  <followStrictOnly>true</followStrictOnly>
                  <append>true</append>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

    <profile>
      <id>release-products</id>
      <activation>
        <file>
          <exists>${acidcli.repository.localDir}/products</exists>
        </file>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>wagon-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>release-products</id>
                <phase>deploy</phase>
                <goals>
                  <goal>upload</goal>
                </goals>
                <configuration>
                  <serverId>acidspace-repository-manager</serverId>
                  <url>${acidcli.repository.remoteUri}/products</url>
                  <fromDir>${acidcli.repository.localDir}/products</fromDir>
                  <includes>*.*</includes>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>